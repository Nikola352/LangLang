<Window x:Class="LangLang.View.StudentExcuseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangLang.View"
        mc:Ignorable="d"
        Title="Excuse" Height="312" Width="389"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <SolidColorBrush x:Key="BlueBtnColor" Color="#34a0a4" />
        <SolidColorBrush x:Key="RedBtnColor" Color="#91261f" />
        <SolidColorBrush x:Key="GrayBtnColor" Color="Gray" />
    </Window.Resources>
    <Grid  >
        <Label Content="Why are you dropping this course?" FontSize="14" VerticalAlignment="Top"/>

        <Border CornerRadius="15" Background="LightGray" Margin="26,45,26,113" >
            <TextBox x:Name="txtMessage"  VerticalAlignment="Top" MinHeight="80" Background="Transparent" BorderThickness="0" Margin="10,8,10,0" Height="66"/>
        </Border>
        <Button Content="Accept"
            FontSize="14"
            Foreground="White"
            Background="{StaticResource BlueBtnColor}"
            BorderThickness="0"
             Click="Confirm_Click" Width="80" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,26,40"
            />

    </Grid>
</Window>
